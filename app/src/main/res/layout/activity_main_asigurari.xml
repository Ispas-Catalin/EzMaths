<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackround"
    tools:context=".Asigurari.MainActivityAsigurari">


    <TextView
        android:id="@+id/asigurariTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asigurari cu plata unica"
        android:textColor="#000000"
        android:textSize="@dimen/size_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/asigurariViatabtn"
        android:layout_width="@dimen/buton_width"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bttn"
        android:text="Asigurari de viata"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asigurariTitle"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/asigurariPensiiBtn"
        android:layout_width="@dimen/buton_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_buttons"
        android:background="@drawable/custom_bttn"
        android:text="Asigurari de pensii"
        app:layout_constraintEnd_toEndOf="@+id/asigurariViatabtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/asigurariViatabtn"
        app:layout_constraintTop_toBottomOf="@+id/asigurariViatabtn" />

    <Button
        android:id="@+id/asigurariDecesBtn"
        android:layout_width="@dimen/buton_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_buttons"
        android:background="@drawable/custom_bttn"
        android:text="Asigurari de deces"
        app:layout_constraintEnd_toEndOf="@+id/asigurariPensiiBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/asigurariPensiiBtn"
        app:layout_constraintTop_toBottomOf="@+id/asigurariPensiiBtn" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uwu"
        android:textColor="#1D091E"
        android:textSize="@dimen/size_a"
        app:layout_constraintBottom_toTopOf="@+id/asigurariViatabtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asigurariTitle"
        app:layout_constraintVertical_bias="0.276" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/platiTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cu mai multe plati"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        android:layout_marginBottom="24dp"/>

    <CheckBox
        android:id="@+id/platiCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/platiTV"
        app:layout_constraintStart_toEndOf="@+id/platiTV"
        app:layout_constraintTop_toTopOf="@+id/platiTV"
        android:layout_marginLeft="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>