<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anuitati.FactorActualizareViager.ui.main.FactorDecesFragment">


    <TextView
        android:id="@+id/dTVdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textColor="@color/black"
        android:textSize="@dimen/size_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/nTVdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="n"
        android:textColor="@color/black"
        android:textSize="@dimen/size_nxm"
        app:layout_constraintBottom_toTopOf="@+id/dTVdeces"
        app:layout_constraintEnd_toStartOf="@+id/dTVdeces"
        app:layout_constraintTop_toBottomOf="@+id/dTVdeces"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/xTVdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="@dimen/size_nxm"
        app:layout_constraintBottom_toTopOf="@+id/dTVdeces"
        app:layout_constraintStart_toEndOf="@id/dTVdeces"
        app:layout_constraintTop_toBottomOf="@+id/dTVdeces"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/nVarstaTVdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diferenta de varsta"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xDiferentaTVdeces" />

    <EditText
        android:id="@+id/nVarstaETdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:hint="n"
        android:inputType="number"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="@+id/nVarstaTVdeces"
        app:layout_constraintStart_toEndOf="@+id/nVarstaTVdeces"
        app:layout_constraintTop_toTopOf="@+id/nVarstaTVdeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/xDiferentaTVdeces"
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        android:text="Varsta"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <EditText
        android:id="@+id/xDiferentaETdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:hint="x"
        android:inputType="number"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="@+id/xDiferentaTVdeces"
        app:layout_constraintStart_toEndOf="@+id/xDiferentaTVdeces"
        app:layout_constraintTop_toTopOf="@+id/xDiferentaTVdeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/resTVdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/result_backround"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toTopOf="@+id/nVarstaTVdeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dTVdeces"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/calculeazaFactorBTNdeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_bttn"
        android:text="Calculeaza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>