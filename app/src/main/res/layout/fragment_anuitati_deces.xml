<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackround"
    tools:context=".Anuitati.Deces.ui.main.AvDecesFragment">

    <TextView
        android:id="@+id/atvAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="#000000"
        android:textSize="@dimen/size_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avTitleTVDeces"
        app:layout_constraintVertical_bias="0.25" />


    <TextView
        android:id="@+id/avTitleTVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Anuitati Deces"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/size_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/varstaTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        android:text="Varsta persoanei"
        android:textColor="#000000"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumaTVAVDeces" />

    <EditText
        android:id="@+id/varstaETAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:hint="x"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/varstaTVAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/varstaTVAVDeces"
        app:layout_constraintTop_toTopOf="@+id/varstaTVAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/amlimnETAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:hint="n"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/amlimnTVAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/amlimnTVAVDeces"
        app:layout_constraintTop_toTopOf="@+id/amlimnTVAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/amlimauxTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="2dp"
        android:text="ani"
        android:textColor="#000000"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="@+id/amlimnTVAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/amlimnETAVDeces"
        app:layout_constraintTop_toTopOf="@+id/amlimnTVAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/amlimnTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        android:text="Limitata la "
        android:textColor="#000000"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/varstaTVAVDeces" />

    <TextView
        android:id="@+id/limitataInferiorTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        android:text="Limitata superior la "
        android:textColor="#000000"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amlimnTVAVDeces" />

    <EditText
        android:id="@+id/limitataInferiorETAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:hint="m"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/limitataInferiorTVAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/limitataInferiorTVAVDeces"
        app:layout_constraintTop_toTopOf="@+id/limitataInferiorTVAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/limitataInferiorAuxTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="2dp"
        android:text="ani"
        android:textColor="#000000"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="@+id/limitataInferiorTVAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/limitataInferiorETAVDeces"
        app:layout_constraintTop_toTopOf="@+id/limitataInferiorTVAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/calculeazaBtnAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bttn"
        android:text="Calculeaza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />


    <TextView
        android:id="@+id/xtvAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="x"
        android:textColor="#000000"
        android:textSize="@dimen/size_nxm"
        app:layout_constraintBottom_toTopOf="@+id/atvAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/atvAVDeces"
        app:layout_constraintTop_toBottomOf="@+id/atvAVDeces"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/nImediatatvAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text=":n|"
        android:textColor="#000000"
        android:textSize="@dimen/size_nxm"
        app:layout_constraintBottom_toBottomOf="@+id/xtvAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/xtvAVDeces"
        app:layout_constraintTop_toTopOf="@+id/xtvAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/nImediatAuxtvAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_"
        android:textColor="#000000"
        android:textSize="@dimen/size__"
        app:layout_constraintBottom_toTopOf="@+id/nImediatatvAVDeces"
        app:layout_constraintEnd_toEndOf="@+id/nImediatatvAVDeces"
        app:layout_constraintStart_toStartOf="@+id/nImediatatvAVDeces"
        app:layout_constraintTop_toBottomOf="@+id/nImediatatvAVDeces"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/nAmanatatvAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="n|"
        android:textColor="#000000"
        android:textSize="@dimen/size_nxm"
        app:layout_constraintBottom_toBottomOf="@+id/xtvAVDeces"
        app:layout_constraintEnd_toStartOf="@+id/atvAVDeces"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/xtvAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/mLimInftvAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m|"
        android:textColor="#000000"
        android:textSize="@dimen/size_nxm"
        app:layout_constraintBottom_toBottomOf="@+id/nAmanatatvAVDeces"
        app:layout_constraintEnd_toStartOf="@+id/nAmanatatvAVDeces"
        app:layout_constraintTop_toTopOf="@+id/nAmanatatvAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/sumaTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:text="@string/suma"
        android:textColor="#000000"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

    <EditText
        android:id="@+id/sumaETAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:hint="s"
        android:inputType="number"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="@+id/sumaTVAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/sumaTVAVDeces"
        app:layout_constraintTop_toTopOf="@+id/sumaTVAVDeces"
        app:layout_constraintVertical_bias="0.5" />

    <CheckBox
        android:id="@+id/sumaCheckBoxDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/sumaETAVDeces"
        app:layout_constraintStart_toEndOf="@+id/sumaETAVDeces"
        app:layout_constraintTop_toTopOf="@+id/sumaETAVDeces"
        app:layout_constraintVertical_bias="0.5"/>

    <TextView
        android:id="@+id/rezultatTVAVDeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/result_backround"
        android:text="Rezultat"
        android:textColor="@color/black"
        android:textSize="@dimen/size_title"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/atvAVDeces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avTitleTVDeces"
        app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>