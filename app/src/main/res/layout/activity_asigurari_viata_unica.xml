<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/appBackround"
    android:layout_height="match_parent"
    tools:context=".Asigurari.AsigurariViata.PlataUnica.AsigurariViataUnicaActivity">


    <TextView
        android:id="@+id/titleAsigTVuv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asigurari de viata  cu plata unica"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toTopOf="@+id/nAsigurareTVvu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/resultAsigTVuv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rezultat"
        android:textColor="@color/black"
        android:background="@drawable/result_backround"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/nAsigurareTVvu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAsigTVuv"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/nAsigurareTVvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:text="Peste cati ani se va plati asigurarea"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/nAsigurareETvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="n"
        android:textSize="@dimen/nomralTV"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/nAsigurareTVvu"
        app:layout_constraintStart_toEndOf="@+id/nAsigurareTVvu"
        app:layout_constraintTop_toTopOf="@+id/nAsigurareTVvu"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/xAsigurareTVvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        android:text="Varsta asiguratorului"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nAsigurareTVvu" />

    <EditText
        android:id="@+id/xAsigurareETvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="x"
        android:textSize="@dimen/nomralTV"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/xAsigurareTVvu"
        app:layout_constraintStart_toEndOf="@+id/xAsigurareTVvu"
        app:layout_constraintTop_toTopOf="@+id/xAsigurareTVvu"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/primaAsiguratorTVvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:text="Calculeaza prima Asiguratorului"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <EditText
        android:id="@+id/primaAsiguratorETvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="s"
        android:textSize="@dimen/nomralTV"
        android:inputType="numberDecimal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/primaAsiguratorTVvu"
        app:layout_constraintStart_toEndOf="@+id/primaAsiguratorTVvu"
        app:layout_constraintTop_toTopOf="@+id/primaAsiguratorTVvu"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="4dp"/>

    <CheckBox
        android:id="@+id/primaAsiguratorCheckBoxTVvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/primaAsiguratorETvu"
        app:layout_constraintStart_toEndOf="@+id/primaAsiguratorETvu"
        app:layout_constraintTop_toTopOf="@+id/primaAsiguratorETvu"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="4dp"/>


    <TextView
        android:id="@+id/primaAsiguratTVvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_TV_Horizontal"
        android:layout_marginLeft="@dimen/distance_TV_Horizontal"
        android:text="Calculeaza prima Asiguratului"
        android:textColor="@color/black"
        android:textSize="@dimen/nomralTV"
        android:layout_marginTop="@dimen/distance_TV_Vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primaAsiguratorTVvu" />

    <EditText
        android:id="@+id/primaAsiguratETvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="p"
        android:textSize="@dimen/nomralTV"
        android:gravity="center"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/primaAsiguratTVvu"
        app:layout_constraintStart_toEndOf="@+id/primaAsiguratTVvu"
        app:layout_constraintTop_toTopOf="@+id/primaAsiguratTVvu"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="4dp"/>

    <CheckBox
        android:id="@+id/primaAsiguratCheckBoxTVvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/primaAsiguratETvu"
        app:layout_constraintStart_toEndOf="@+id/primaAsiguratETvu"
        app:layout_constraintTop_toTopOf="@+id/primaAsiguratETvu"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/calculeazaAsigurareBtnvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bttn"
        android:text="calculeaza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primaAsiguratTVvu"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/backbtnuv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>

